<%= form_with model: @lab_report do |f|%>
  <% if @lab_report.errors.any?%>
    <% @lab_report.errors.full_messages.each do |msg|%>
    <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <h4>Title</h4>
    <%= f.text_field :title, required: true%><br>

  <h4>Description</h4>
    <%= f.text_area :description, {:class => 'form-control'}%><br>

    <%= f.submit({:class => 'btn btn-success'}) %>
    <%= link_to 'Назад', root_path, class: 'btn btn-secondary' %>
<% end %>
